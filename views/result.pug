extends layout.pug
block content  
    .header
        .wrapper
            form
                h1 BMI calculator
                p Insert Your Age
                input#age(type='text' name='userAge' value=ageNum)
                p Insert Weight in Kg
                input#weight(type='text' name='userWeight' value=weightNum)
                br
                p Insert Height in cm
                input#height(type='text' name='userHeight' value=heightNum)
                br
                button#calc check
                p#result Your BMI result is: #{BMI.toFixed(1)}