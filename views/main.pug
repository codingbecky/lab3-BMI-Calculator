extends layout.pug
block content  
    .header
        .wrapper
            form(action='/result' method='POST')
                h1 BMI calculator
                p Insert Your Age
                input#age(type='text' name='age' required )
                p Insert Weight in Kg
                input#weight(type='text' name='weight' required)
                br
                p Insert Height in cm
                input#height(type='text' name='height' required)
                br
                button#calc(type='submit') check
                p#result
